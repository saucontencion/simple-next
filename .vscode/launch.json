{
  "version": "0.2.0",
  "configurations": [
        {
      "name": "Next.js: debug server-side",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/server.js",  // Aqu√≠ debes apuntar al archivo server.js
      "runtimeArgs": [
        "--inspect"
      ],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      }
    },
    {
      "name": "Next.js: debug client-side (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--user-data-dir=${workspaceFolder}\\.vscode\\chrome-profile"
      ]
    },
    {
      "name": "Debug client-side: (Brave)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe",
      "runtimeArgs": [
        "--remote-debugging-port=9223",
        "--user-data-dir=${workspaceFolder}\\.vscode\\brave-profile"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Next.js: debug full stack (Chrome + Brave)",
      "configurations": [
        "Next.js: debug server-side",
        "Next.js: debug client-side (Chrome)",
        "Debug client-side: (Brave)"
      ]
    }
  ]
}
